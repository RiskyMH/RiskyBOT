{
    "$schema": "https://turborepo.org/schema.json",
    "pipeline": {
        "build": {
            "dependsOn": [
                "^build"
            ],
            "outputs": [
                "dist/**",
                ".next/**"
            ]
        },
        "build:ci": {
            "dependsOn": [
                "^build:ci"
            ],
            "outputs": [
                ".next/**",
                "dist/**"
            ]
        },
        "lint": {
            "dependsOn": [],
            "outputs": []
        },
        "test": {
            "dependsOn": [
                "^test",
                "build"
            ],
            "outputs": []
        }
    }
}