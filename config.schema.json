{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Config options",
    "description": "The schema for the config file",
    "type": "object",
    "required": [
        "colors"
    ],
    "properties": {
        "colors": {
            "type": "object",
            "description": "The colors used for the bot (eg embed color)",
            "required": [
                "ok",
                "error",
                "good",
                "warning",
                "washedOut"
            ],
            "properties": {
                "ok": {
                    "type": "string",
                    "title": "Config --> Colors",
                    "description": "The color when something has completed normally",
                    "default": "#5865F2"
                },
                "error": {
                    "type": "string",
                    "title": "Config --> Colors",
                    "description": "The color when something has an error",
                    "default": "#ED4245"
                },
                "good": {
                    "type": "string",
                    "title": "Config --> Colors",
                    "description": "The color when something has had a good outcome",
                    "default": "\"#57F287\""
                },
                "warning": {
                    "type": "string",
                    "title": "Config --> Colors",
                    "description": "The color when something has not fully complected..",
                    "default": "\"#FEE75C\""
                },
                "washedOut": {
                    "type": "object",
                    "title": "Config --> Washed Out",
                    "description": "The color when something is washed out",
                    "properties": {
                        "ok": {
                            "type": "string",
                            "title": "Config --> washedOut--> Colors",
                            "description": "The color when something has completed normally",
                            "default": "\"#5865F2\""
                        }
                    }
                }
            }
        },
        "apiEnabled": {
            "type": "object",
            "description": "Which APIs will be enabled",
            "properties": {
                "reddit": {
                    "type": "boolean",
                    "title": "apiEnabled --> Reddit",
                    "description": "Should Reddit api be used?",
                    "default": true
                },
                "urbanDictionary": {
                    "type": "boolean",
                    "title": "apiEnabled --> UrbanDictionary",
                    "description": "Should UrbanDictionary api be used?",
                    "default": true
                },
                "nekobot": {
                    "type": "boolean",
                    "title": "apiEnabled --> Nekobot",
                    "description": "Should Nekobot.xyz api be used?",
                    "default": true
                },
                "someRandomApi": {
                    "type": "boolean",
                    "title": "apiEnabled --> someRandomApi",
                    "description": "Should some-random-api.ml api be used?",
                    "default": true
                },
                "topgg": {
                    "type": "boolean",
                    "title": "apiEnabled --> Top.gg",
                    "description": "Should Top.gg api be used? (if token not in `.env` then still disabled)",
                    "default": false
                },
                "googleTranslate": {
                    "type": "boolean",
                    "title": "apiEnabled --> Google Translate",
                    "description": "Should Google Translate api be used?",
                    "default": false
                },
                "randomSmallOnes": {
                    "type": "object",
                    "title": "apiEnabled --> Random Small Ones",
                    "description": "Should some of the small api category's be used?",
                    "properties": {
                        "randomImage": {
                            "type": "boolean",
                            "title": "apiEnabled --> randomSmallOnes --> Random Image",
                            "description": "Should the small random image api's be used?",
                            "default": true
                        },
                        "randomText": {
                            "type": "boolean",
                            "title": "apiEnabled --> randomSmallOnes --> Random Text",
                            "description": "Should the small random text api's be used?",
                            "default": true
                        }
                    }
                }
            }
        }
    }
}