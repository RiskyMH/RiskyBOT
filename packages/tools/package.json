{
    "name": "@riskybot/tools",
    "description": "A collection of tools for building and maintaining the RiskyBOT project",
    "version": "4.0.0",
    "author": "RiskyMH",
    "homepage": "https://github.com/RiskyMH/RiskyBOT/tree/main/packages/tools",
    "repository": {
