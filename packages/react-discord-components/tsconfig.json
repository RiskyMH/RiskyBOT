{
    // Mapped from https://www.typescriptlang.org/tsconfig
    "extends": "../../tsconfig.json",
    "exclude": ["**/*.d.ts", "dist", "node_modules"],
    "include": ["src"],
    "compilerOptions": {
        "strict": true,
        "jsx": "react-jsx",
        "declaration": true,
        "esModuleInterop": true,
        "outDir": "dist",
        "target": "es6",
        "module": "es6",
        "moduleResolution": "node",
        // "plugins": [{ "name": "typescript-plugin-css-modules" }]
    },
}