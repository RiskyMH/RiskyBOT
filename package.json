{
    "name": "riskybot",
    "description": "A random discord bot with many fun features",
    "version": "5.0.0",
    "private": true,
    "author": "RiskyMH",
    "engines": {
        "node": ">=18.0.0"
    },
    "homepage": "https://bot.riskymh.dev",
    "repository": {
        "type": "git",
        "url": "https://github.com/RiskyMH/RiskyBOT.git"
    },
    "scripts": {
        "build": "turbo run build",
        "test": "bun test",
        "lint": "bun scripts/eslint.ts",
        "tsc": "bun scripts/tsc.ts",
        "update": "yarn upgrade-interactive",
        "deploy-commands": "bun run deploy-commands:riskybot && bun run deploy-commands:imgen",
        "deploy-commands:riskybot": "bun apps/riskybot/src/deploy-commands.ts",
        "deploy-commands:imgen": "bun apps/imgen/src/deploy-commands.ts",
        "start": "bun scripts/start.ts",
        "start:riskybot": "bun apps/riskybot/src/server.ts",
        "start:imgen": "bun apps/imgen/src/server.ts",
        "dev:website": "yarn workspace @riskybot/website dev",
        "dev:bot": "yarn vercel dev"
    },
    "devDependencies": {
        "@types/node": "^20.10.4",
        "@typescript-eslint/eslint-plugin": "^6.14.0",
        "@typescript-eslint/parser": "^6.14.0",
        "bun-types": "^1.0.16",
        "eslint": "^8.55.0",
        "eslint-plugin-unicorn": "^49.0.0",
        "turbo": "^1.11.1",
        "typescript": "^5.3.3"
    },
    "packageManager": "yarn@4.0.2",
    "workspaces": [
        "packages/*",
        "apps/*",
        "scripts"
    ],
    "resolutions": {
        "discord-api-types": "^0.37.66"
    }
}
